
<input type="@(type ?? "text")"
       @bind:get="value"
       @bind:set="valueChanged.InvokeAsync"
       @bind:event="oninput">

@code {

    [Parameter] public string type { get; set; }
    [Parameter] public string value { get; set; }
    [Parameter] public EventCallback<string> valueChanged { get; set; }

}
